<template>
  <div id="app">
    <p class="text-center" style="font-size: 50px; font-weight: bold; color: black;">TodoList</p>
    <HelloWorld :msg="pageTitle" />
    <div class="container-sm">
    </div>
    <div class="container-sm">
      <div class="hstack gap-3">
        <input type="text" v-model="newTodo" class="form-control me-auto" placeholder="할 일을 적어봅시다." @keyup.enter="addTodo">
        <button type="button" class="btn btn-secondary" button @click="addTodo">추가</button>
        <div class="vr"></div>
        <button type="button" class="btn btn-outline-danger" button @click="removeTodoItem(index)">삭제</button>
      </div>
      <ul>
        <div class="hstack gap-3" v-for="(todoItem, index) in todoItems" :key="index">
          <div class="mb-3">
            <input type="checkbox" v-model="selectedItems" :value="index">
            <label :for="`todoItem_${index}`"></label>
            <input type="text" class="form-control me auto" :id="`todoItem_${index}`" :placeholder="todoItem" v-model="inputText">
          </div>
        </div>
      </ul>
    </div>
  </div>
</template>

<script>
export default {
  data() {
    return {
      pageTitle: 'TodoList',
      newTodo: '',
      todoItems: [],
      selectedItems: [],
    };
  },
  created() {
    this.loadTodoItemsFromLocalStorage();
  },
  methods: {
    addTodo() {
      if (this.newTodo !== '') {
        const value = this.newTodo.trim();
        localStorage.setItem(value, value);
        this.todoItems.push(value);
        this.clearInput();
      }
    },
    removeTodoItem(index) {
      const todoItem = this.todoItems[index];
      this.todoItems.splice(index, 1);
      localStorage.removeItem(todoItem);
    },
    clearInput() {
      this.newTodo = '';
    },
    loadTodoItemsFromLocalStorage() {
      if (localStorage.length > 0) {
        for (let i = 0; i < localStorage.length; i++) {
          const key = localStorage.key(i);
          this.todoItems.push(key);
        }
      }
    },
  },
};
</script>

<style>
ul {
  list-style-type: none;
  padding: 0;
}

li {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
}

button {
  margin-left: 0;
}
</style>
